@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
  var content = (ContentModels.WhyUsTools)Model.Content;
}

<div class="tool_box">
    <div class="tool_icon">
        <i class="@content.Value("toolIcon")"></i>
    </div>
    <div>
        <h4>@content.Value("toolName")</h4>
        <p>@content.Value("toolDescription").</p> 
    </div>     
</div> 